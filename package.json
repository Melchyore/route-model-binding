{
  "name": "@adonisjs/route-model-binding",
  "description": "Route model binding for AdonisJS",
  "version": "1.0.1",
  "engines": {
    "node": ">=20.11.1"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests",
    "!build/tests_helpers"
  ],
  "exports": {
    ".": "./build/index.js",
    "./rmb_provider": "./build/providers/rmb_provider.js",
    "./rmb_middleware": "./build/src/rmb_middleware.js",
    "./types/*": "./build/src/types/*.js"
  },
  "scripts": {
    "build": "npm run compile",
    "clean": "del-cli build",
    "compile": "npm run clean && tsc",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "precompile": "npm run lint",
    "prepublishOnly": "npm run build",
    "pretest": "npm run lint",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "release": "npx release-it",
    "test": "c8 npm run quick:test",
    "typecheck": "tsc --noEmit",
    "version": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/route-model-binding.git"
  },
  "keywords": [
    "rmb",
    "route-model-binding",
    "route-model",
    "adonisjs"
  ],
  "author": "virk,adonisjs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adonisjs/route-model-binding/issues"
  },
  "homepage": "https://github.com/adonisjs/route-model-binding#readme",
  "dependencies": {
    "@adonisjs/fold": "^10.1.2",
    "@poppinss/utils": "^6.7.2"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/core": "^6.3.1",
    "@adonisjs/eslint-config": "^1.3.0",
    "@adonisjs/lucid": "^20.5.1",
    "@adonisjs/prettier-config": "^1.3.0",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "2.1.0",
    "@japa/runner": "3.1.1",
    "@swc/core": "1.4.11",
    "@types/node": "^20.11.30",
    "better-sqlite3": "^9.5.0",
    "c8": "^9.1.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "luxon": "^3.4.4",
    "prettier": "^3.2.5",
    "reflect-metadata": "^0.2.2",
    "release-it": "^17.1.1",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.3.1",
    "@adonisjs/lucid": "^20.5.1"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  }
}
